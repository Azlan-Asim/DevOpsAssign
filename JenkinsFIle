pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')  // stored in Jenkins Credentials
        ANSIBLE_VAULT_PASSWORD = credentials('ansible-vault-pass') // optional if you use vault
        APP_SERVER = "10.0.2.228"
        BASTION = "98.87.117.221"
        APP_USER = "ubuntu"
        APP_KEY = "/home/jenkins/.ssh/my-key.pem"
        REPO = "yourdockerhubusername/nextjs-app"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'git@github.com:YourUser/YourNextjsRepo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        def appImage = docker.build("${REPO}:latest")
                        appImage.push()
                    }
                }
            }
        }

        stage('Deploy via Ansible') {
            steps {
                // Make sure inventory.ini is correctly set with bastion and app server
                sh """
                ansible-playbook -i inventory.ini deploy.yml --vault-password-file /home/jenkins/.ansible_vault_pass
                """
            }
        }
    }

    post {
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed. Check logs.'
        }
    }
}
